<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TotalUsageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/total_usage_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_extrabold"
                        android:text="@string/total_usage"
                        android:textColor="@color/secondary"
                        android:textSize="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/my_usage_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/secondary"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_usage_title_bar">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/secondary"
                        android:padding="16dp">
                        <!-- 버튼과 힌트 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/my_usage_card_before_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/secondary"
                            android:outlineProvider="none"
                            app:icon="@drawable/navigate_before_48px"
                            app:iconGravity="textStart"
                            app:iconSize="36dp"
                            app:iconTint="@color/accent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <LinearLayout
                            android:id="@+id/my_usage_card_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/my_usage_card_before_button"
                            app:layout_constraintEnd_toStartOf="@id/my_usage_card_next_button"
                            app:layout_constraintStart_toEndOf="@id/my_usage_card_before_button"
                            app:layout_constraintTop_toTopOf="@id/my_usage_card_before_button">

                            <ImageView
                                android:id="@+id/my_usage_card_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:width="20dp"
                                android:height="20dp"
                                android:src="@drawable/person_48px"
                                app:tint="@color/third" />

                            <TextView
                                android:id="@+id/my_usage_card_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/pretendard_medium"
                                android:text="@string/my_usage"
                                android:textColor="@color/third" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/my_usage_card_next_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/secondary"
                            android:outlineProvider="none"
                            app:icon="@drawable/navigate_next_48px"
                            app:iconGravity="textEnd"
                            app:iconSize="36dp"
                            app:iconTint="@color/accent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />
                        <!-- 버튼과 힌트 끝 -->

                        <kr.co.carboncheck.android.carboncheckapp.custom.CustomViewPager
                            android:id="@+id/my_usage_custom_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/my_usage_card_before_button">

                            <!-- 도넛 차트 -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraint_donut_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <app.futured.donut.DonutProgressView
                                    android:id="@+id/donut_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="32dp"
                                    app:donut_bgLineColor="@color/cloud"
                                    app:donut_gapAngle="270"
                                    app:donut_gapWidth="20"
                                    app:donut_strokeWidth="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="@id/donut_view"
                                    app:layout_constraintEnd_toEndOf="@id/donut_view"
                                    app:layout_constraintStart_toStartOf="@id/donut_view"
                                    app:layout_constraintTop_toTopOf="@id/donut_view">

                                    <!--                                    <TextView-->
                                    <!--                                        android:id="@+id/total_amount_text"-->
                                    <!--                                        android:layout_width="wrap_content"-->
                                    <!--                                        android:layout_height="wrap_content"-->
                                    <!--                                        android:fontFamily="@font/pretendard_bold"-->
                                    <!--                                        android:includeFontPadding="false"-->
                                    <!--                                        android:text="@string/total_emissions"-->
                                    <!--                                        android:textColor="@color/third"-->
                                    <!--                                        android:textSize="24dp"-->
                                    <!--                                        app:layout_constraintBottom_toTopOf="@id/total_amount_count_text"-->
                                    <!--                                        app:layout_constraintEnd_toEndOf="parent"-->
                                    <!--                                        app:layout_constraintStart_toStartOf="parent"-->
                                    <!--                                        app:layout_constraintTop_toTopOf="parent" />-->

                                    <TextView
                                        android:elevation="1dp"
                                        android:id="@+id/total_amount_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_bold"
                                        android:includeFontPadding="false"
                                        android:inputType="number"
                                        android:text="@string/total_emissions"
                                        android:textColor="@color/third"
                                        android:textSize="24dp"
                                        app:layout_constraintBottom_toTopOf="@id/total_amount_count_text"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                        android:id="@+id/total_amount_count_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_bold"
                                        android:includeFontPadding="false"
                                        android:text="@string/loading"
                                        android:textColor="@color/third"
                                        android:textSize="60dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/total_amount_text" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <TextView
                                    android:id="@+id/electric_section_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:includeFontPadding="false"
                                    android:text="전력 사용량 계산중"
                                    android:textColor="@color/electric"
                                    app:drawableStartCompat="@drawable/ic_dot_electric"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/water_section_text"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/donut_view" />

                                <TextView
                                    android:id="@+id/water_section_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:includeFontPadding="false"
                                    android:text="수도 사용량 계산중"
                                    android:textColor="@color/water"
                                    app:drawableStartCompat="@drawable/ic_dot_water"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/electric_section_text"
                                    app:layout_constraintTop_toBottomOf="@id/donut_view" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <!-- 나의 주간 배출량 -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraint_recent_usage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/my_recent_usage_chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:id="@+id/date_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center_horizontal"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/my_recent_usage_chart">

                                    <TextView
                                        android:id="@+id/date0"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/27" />

                                    <TextView
                                        android:id="@+id/date1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/28" />

                                    <TextView
                                        android:id="@+id/date2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/29" />

                                    <TextView
                                        android:id="@+id/date3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/30" />

                                    <TextView
                                        android:id="@+id/date4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/31" />

                                    <TextView
                                        android:id="@+id/date5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="06/01" />

                                    <TextView
                                        android:id="@+id/date6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="06/02" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/electric_legend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="12dp"
                                    android:drawableStart="@drawable/ic_dot_electric"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:includeFontPadding="false"
                                    android:text="전력 사용량"
                                    android:textColor="@color/electric"
                                    app:layout_constraintEnd_toStartOf="@id/water_legend"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/date_layout" />

                                <TextView
                                    android:id="@+id/water_legend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="12dp"
                                    android:drawableStart="@drawable/ic_dot_water"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:includeFontPadding="false"
                                    android:text="수도 사용량"
                                    android:textColor="@color/water"
                                    app:layout_constraintEnd_toStartOf="@id/carbon_legend"
                                    app:layout_constraintStart_toEndOf="@id/electric_legend"
                                    app:layout_constraintTop_toBottomOf="@id/date_layout" />

                                <TextView
                                    android:id="@+id/carbon_legend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="12dp"
                                    android:drawableStart="@drawable/ic_dot_carbon"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:includeFontPadding="false"
                                    android:text="탄소 배출량"
                                    android:textColor="@color/accent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/water_legend"
                                    app:layout_constraintTop_toBottomOf="@id/date_layout" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </kr.co.carboncheck.android.carboncheckapp.custom.CustomViewPager>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/home_usage_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/secondary"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_usage_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/secondary"
                        android:padding="16dp">
                        <!-- 버튼과 힌트 -->

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/home_usage_card_before_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/secondary"
                            android:outlineProvider="none"
                            app:icon="@drawable/navigate_before_48px"
                            app:iconGravity="textStart"
                            app:iconSize="36dp"
                            app:iconTint="@color/accent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <LinearLayout
                            android:id="@+id/home_usage_card_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/home_usage_card_before_button"
                            app:layout_constraintEnd_toStartOf="@id/home_usage_card_next_button"
                            app:layout_constraintStart_toEndOf="@id/home_usage_card_before_button"
                            app:layout_constraintTop_toTopOf="@id/home_usage_card_before_button">

                            <ImageView
                                android:id="@+id/home_usage_card_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:width="20dp"
                                android:height="20dp"
                                android:src="@drawable/group_48px"
                                app:tint="@color/third" />

                            <TextView
                                android:id="@+id/home_usage_card_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/pretendard_medium"
                                android:text="@string/home_usage"
                                android:textColor="@color/third" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/home_usage_card_next_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/secondary"
                            android:outlineProvider="none"
                            app:icon="@drawable/navigate_next_48px"
                            app:iconGravity="textEnd"
                            app:iconSize="36dp"
                            app:iconTint="@color/accent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />
                        <!-- 버튼과 힌트 끝 -->
                        <kr.co.carboncheck.android.carboncheckapp.custom.CustomViewPager
                            android:id="@+id/home_usage_custom_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/home_usage_card_before_button">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraint_home_usage_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/home_usage_recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:itemCount="3"
                                    tools:listitem="@layout/home_user_usage_list" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraint_home_recent_usage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/home_recent_usage_chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:id="@+id/home_date_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center_horizontal"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/home_recent_usage_chart">

                                    <TextView
                                        android:id="@+id/home_date0"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/27" />

                                    <TextView
                                        android:id="@+id/home_date1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/28" />

                                    <TextView
                                        android:id="@+id/home_date2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/29" />

                                    <TextView
                                        android:id="@+id/home_date3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/30" />

                                    <TextView
                                        android:id="@+id/home_date4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="05/31" />

                                    <TextView
                                        android:id="@+id/home_date5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/accent"
                                        android:textSize="11sp"
                                        tools:text="06/01" />

                                    <TextView
                                        android:id="@+id/home_date6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/pretendard_semibold"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
